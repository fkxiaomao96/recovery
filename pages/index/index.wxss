.page{
  margin: 0;
  padding: 0;
}

/*背景*/
.huishou_bg{
  width: 100%;
  height: 730rpx;
  background-size:100% 100%;
  background-repeat: no-repeat;
}

/*表单*/
.huishou_form{
  width: 96%;
  height:600rpx;
  position:relative;
  margin: 0rpx auto;
  background-color: #fff;
  top: 150rpx;
  box-shadow:1px 1px 10px #aaa;
  border-radius: 10px;
}

.form{
  position: relative;
  top: 40rpx;
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #EDEBF4;
  margin: 0px auto;
  font-size: 24rpx;
}

.form_last{
  position: relative;
  top: 40rpx;
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0px auto;
  margin-top: 50rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #E9F01D;
  box-shadow:1px 1px 10px #aaa;
  border-radius: 10px;
  color: #fff;
}

.form_last:active{
  background-color: #EACF02;
}

.title{
  color: #aaa;
  float: left;
}

.input{
  width: 400rpx;
  float: left;
  position: relative;
  top: 20rpx;
  color: #666;
  margin-left: 100rpx;
}

/*文本*/
.huishou_text{
  width: 90%;
  position: relative;
  top: 100rpx;
  height: auto;
  color: #aaa;
  margin: 30rpx auto;
}

.text_top{
  text-align: center;
  font-size: 24rpx;
}

.text{
  margin-top: 20rpx;
  margin-bottom: 14rpx;
  font-size: 10px;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis; /**文字隐藏后添加省略号*/
  white-space: nowrap; /**强制不换行*/
}

.span{
  color: #666;
  text-decoration:underline
}
.span:active{
  color: #aaa;
}