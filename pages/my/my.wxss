.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1E90FF 0%, #4169E1 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

/* 个人信息区域样式 */
.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.profile-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.username {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.user-type {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 10rpx;
}

.avatar-container {
  margin: 20rpx 0;
}

.avatar-circle {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plant-icon {
  width: 80rpx;
  height: 80rpx;
}

.badge {
  background: #2ECC71;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
}

.badge text {
  color: #FFFFFF;
  font-size: 24rpx;
}

/* 统计信息区域样式 */
.stats-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.stat-row:last-child {
  border-bottom: none;
}

.stat-label {
  color: #FFFFFF;
  font-size: 28rpx;
}

.stat-value-container {
  display: flex;
  align-items: center;
}

.stat-value {
  color: #FFFFFF;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.stat-currency {
  color: #FFFFFF;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.arrow {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

/* 按钮样式 */
.view-orders-btn {
  width: 100%;
  background: #FFFFFF;
  color: #1E90FF;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: 40rpx;
  border: none;
  text-align: center;
}

.view-orders-btn:active {
  opacity: 0.9;
}